<mvc:View controllerName="sap.databinding2.project3.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <IconTabBar
		id="idIconTabBarNoIcons"
		expanded="true"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="Info Pessoal" key="info">
				<VBox >
					<Text text="Nome: {perfil>/name} sobrenome: {perfil>/last_name} idade: {perfil>/age}" />

					<TextArea value="{perfil>/address/street/name} - {perfil>/address/street/number}
					                {perfil>/address/city} - {perfil>/address/state}" 
					editable="{perfil>/address/edit}" rows="8"/>

					<List
						headerText="Skills"
						headerLevel="H2"
						items="{
							path: 'perfil>/skills'
						}" >
						<StandardListItem
							title="{perfil>name}"/>
					</List>
				</VBox>
			</IconTabFilter>
			<IconTabFilter text="Fan of" key="fanof">
				
				<VBox >
					<Table id="idProductsTable"
						inset="false"
						items="{
							path: 'perfil>/fan_of',
							sorter: {
								path: 'name'
							}
						}">
						<columns>
							<Column
								width="12em">
								<Text text="Nome" />
							</Column>
							<Column
								minScreenWidth="Tablet"
								demandPopin="true">
								<Text text="ProfissÃ£o" />
							</Column>
						</columns>
						<items>
							<ColumnListItem vAlign="Middle">
								<cells>
									<ObjectIdentifier
										title="{perfil>name}"/>
									<Text
										text="{perfil>job}" />

								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</VBox>
			</IconTabFilter>
			<IconTabFilter text="Notes" key="notes">
				<Text text="Notes go here ..." />
			</IconTabFilter>
			<IconTabFilter text="People" key="people">
				<Text text="People content goes here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar>
        </content >
    </Page>
</mvc:View>
