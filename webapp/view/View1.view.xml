<mvc:View controllerName="sap.databinding2.project3.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <IconTabBar
		id="idIconTabBarNoIcons"
		expanded="true"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="Nome" key="info">
				<VBox >
					<Text text="Nome: {perfil>/name} sobrenome: {perfil>/last_name} idade: {perfil>/age}" />

					<TextArea value="{perfil>/address/street/name} - {perfil>/address/street/number}
					                {perfil>/address/city} - {perfil>/address/state}" 
					editable="{perfil>/address/edit}" rows="8"/>

				</VBox>
			</IconTabFilter>
			<IconTabFilter text="Attachments" key="attachments">
				<Text text="Attachments go here ..." />
			</IconTabFilter>
			<IconTabFilter text="Notes" key="notes">
				<Text text="Notes go here ..." />
			</IconTabFilter>
			<IconTabFilter text="People" key="people">
				<Text text="People content goes here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar>
        </content >
    </Page>
</mvc:View>
